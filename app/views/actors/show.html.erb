<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @actor.name %>
</p>

<p>
  <strong>Movie Titles:</strong>
  <p>
    <ul>
      <% @actor.movies.each do |movie| %>
      <li>
        <%= link_to movie.title, movie %>
      </li>
      <% end %>
    </ul>
  </p>
</p>

<strong>All Movie Genres:</strong>
<p>Model Method:
<%= @actor.genres.join(' | ') %>
</p>
<p>Loop :
  <% genres = [] %>
  <% @actor.movies.each do |movie|%>
    <% genres << movie.genres.map(&:name) %>
  <% end %>
    <%= genres.flatten.uniq.sort %>
</p>


